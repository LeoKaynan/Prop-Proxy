{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "lib",          
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules"]
}
